@model IEnumerable<Blazy.Core.DTOs.PostDto>

@{
    ViewData["Title"] = ViewBag.User?.Username ?? "Blog";
    var user = ViewBag.User as Blazy.Core.DTOs.UserDto;
}

<div class="blog-header" style="@GetUserHeaderStyle(user)">
    @if (!string.IsNullOrEmpty(user?.BannerUrl))
    {
        <div class="blog-banner">
            <img src="@user.BannerUrl" alt="Banner" />
        </div>
    }
    
    <div class="blog-user-info">
        <h1>@user?.Username's Blog</h1>
        
        @if (!string.IsNullOrEmpty(user?.Pronouns))
        {
            <p class="pronouns">@user.Pronouns</p>
        }
        
        @if (!string.IsNullOrEmpty(user?.FirstName) || !string.IsNullOrEmpty(user?.LastName))
        {
            <p class="full-name">@user.FirstName @user.LastName</p>
        }
        
        @if (!string.IsNullOrEmpty(user?.Bio))
        {
            <div class="bio">@Html.Raw(user.Bio)</div>
        }

        @if (user?.Tags.Any() == true)
        {
            <div class="tags">
                @foreach (var tag in user.Tags)
                {
                    <span class="tag">#@tag</span>
                }
            </div>
        }

        <div class="blog-stats">
            <span>â˜… @user?.PostCount Posts</span>
            <span>â™¥ @user?.SubscriberCount Subscribers</span>
            <span>âœ“ Member since @user?.CreatedAt.ToString("MMMM yyyy")</span>
        </div>

        @if (User.Identity?.IsAuthenticated == true && !user?.IsCurrentUser == true)
        {
            <div class="blog-actions">
                @if (user?.IsSubscribed == true)
                {
                    <form asp-action="Unsubscribe" method="post" class="inline-form">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="userId" value="@user.Id" />
                        <button type="submit" class="btn">âœ“ Unsubscribe</button>
                    </form>
                }
                else
                {
                    <form asp-action="Subscribe" method="post" class="inline-form">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="userId" value="@user.Id" />
                        <button type="submit" class="btn">â˜… Subscribe</button>
                    </form>
                }
            </div>
        }
    </div>

    @if (!string.IsNullOrEmpty(user?.CustomHtml))
    {
        <div class="custom-html">@Html.Raw(user.CustomHtml)</div>
    }

    @if (!string.IsNullOrEmpty(user?.MusicUrl))
    {
        <div class="profile-music">
            <audio controls autoplay loop>
                <source src="@user.MusicUrl" type="audio/mpeg">
                Your browser does not support the audio element.
            </audio>
        </div>
    }
</div>

<div class="blog-content profile-custom" style="@GetUserContentStyle(user)">
    <div class="posts-container">
        @if (Model != null && Model.Any())
        {
            @foreach (var post in Model)
            {
                <div class="post-card">
                    <div class="post-header">
                        <h3>@post.Title</h3>
                        <span class="post-meta">@post.CreatedAt.ToString("MMM dd, yyyy @ HH:mm")</span>
                    </div>
                    
                    @if (!string.IsNullOrEmpty(post.ImageUrl))
                    {
                        <div class="post-image">
                            <img src="@post.ImageUrl" alt="Post image" />
                        </div>
                    }
                    
                    <div class="post-content">
                        @Html.Raw(post.Content)
                    </div>

                    @if (!string.IsNullOrEmpty(post.MusicUrl))
                    {
                        <div class="post-music">
                            <audio controls src="@post.MusicUrl">Your browser does not support the audio element.</audio>
                        </div>
                    }

                    @if (post.Tags.Any())
                    {
                        <div class="post-tags">
                            @foreach (var tag in post.Tags)
                            {
                                <span class="tag">#@tag</span>
                            }
                        </div>
                    }

                    <div class="post-actions">
                        <a asp-controller="Post" asp-action="Index" asp-route-id="@post.Id" class="btn">Read More âœ§</a>
                        <span class="likes">â™¥ @post.LikeCount</span>
                        <span class="dislikes">âœ– @post.DislikeCount</span>
                        <span class="comments">ðŸ’¬ @post.CommentCount</span>
                    </div>
                </div>
            }

            <div class="pagination">
                @if (ViewBag.CurrentPage > 1)
                {
                    <a asp-action="Index" asp-route-username="@user?.Username" asp-route-page="@(ViewBag.CurrentPage - 1)" class="btn">Â« Previous</a>
                }
                
                <span>Page @ViewBag.CurrentPage of @ViewBag.PageCount</span>
                
                @if (ViewBag.CurrentPage < ViewBag.PageCount)
                {
                    <a asp-action="Index" asp-route-username="@user?.Username" asp-route-page="@(ViewBag.CurrentPage + 1)" class="btn">Next Â»</a>
                }
            </div>
        }
        else
        {
            <div class="empty-state">
                <p>â™¡ No posts yet! â™¡</p>
            </div>
        }
    </div>
</div>

@functions {
    public string GetUserHeaderStyle(Blazy.Core.DTOs.UserDto? user)
    {
        var styles = new List<string>();
        
        if (!string.IsNullOrEmpty(user?.BackgroundUrl))
        {
            styles.Add($"background-image: url('{user.BackgroundUrl}');");
            styles.Add("background-size: cover;");
            styles.Add("background-position: center;");
            styles.Add("background-attachment: fixed;");
        }
        
        if (!string.IsNullOrEmpty(user?.AccentColor))
        {
            styles.Add($"border-color: {user.AccentColor};");
        }
        
        if (!string.IsNullOrEmpty(user?.CustomFont))
        {
            styles.Add($"font-family: {user.CustomFont};");
        }
        
        return string.Join(" ", styles);
    }

    public string GetUserContentStyle(Blazy.Core.DTOs.UserDto? user)
    {
        var styles = new List<string>();
        
        if (!string.IsNullOrEmpty(user?.AccentColor))
        {
            styles.Add($"--accent-color: {user.AccentColor};");
        }
        
        if (!string.IsNullOrEmpty(user?.CustomFont))
        {
            styles.Add($"font-family: {user.CustomFont};");
        }
        
        return string.Join(" ", styles);
    }
}

@{
    if (!string.IsNullOrEmpty(user?.CustomCss))
    {
        <style>
            @Html.Raw(user.CustomCss)
        </style>
    }
}