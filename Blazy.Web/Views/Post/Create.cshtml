@model Blazy.Core.DTOs.CreatePostDto

@{
    ViewData["Title"] = "Create Post";
}

<div class="page-header">
    <h2>✧ Create a New Post ✧</h2>
    <p class="subtitle">Share your thoughts with the world! ♡</p>
</div>

<div class="create-post-container">
    <form asp-action="Create" method="post" class="post-form">
        @Html.AntiForgeryToken()
        
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-error">
                @Html.ValidationSummary(false)
            </div>
        }

        <div class="form-group">
            <label for="Title">Title:</label>
            <input type="text" id="Title" name="Title" required maxlength="200" placeholder="Give your post a catchy title! ✧" />
        </div>

        <div class="form-group">
            <label for="Content">Content:</label>
            <textarea id="Content" name="Content" rows="15" required placeholder="Write something amazing... You can use HTML! ♡"></textarea>
            <small>Supports HTML! Use &lt;br&gt; for line breaks, &lt;b&gt; for bold, etc.</small>
        </div>

        <div class="form-group">
            <label for="ImageUrl">Image URL (optional):</label>
            <input type="url" id="ImageUrl" name="ImageUrl" placeholder="https://example.com/image.jpg" />
        </div>

        <div class="form-group">
            <label for="MusicUrl">Music URL (optional):</label>
            <input type="url" id="MusicUrl" name="MusicUrl" placeholder="https://example.com/music.mp3" />
        </div>

        <div class="form-group">
            <label for="Tags">Tags (optional):</label>
            <input type="text" id="Tags" name="Tags" placeholder="art, music, writing" />
            <small>Separate tags with commas</small>
        </div>

        <div class="form-actions">
            <button type="submit" class="btn btn-primary">Publish Post ✧</button>
            <a asp-controller="Home" asp-action="Index" class="btn">Cancel</a>
        </div>
    </form>

    <div class="tips-section">
        <h3>✧ Tips for Great Posts ✧</h3>
        <ul>
            <li>Use descriptive titles to grab attention</li>
            <li>Add images to make your posts more visual</li>
            <li>Use tags to help people discover your content</li>
            <li>Be creative with HTML formatting!</li>
            <li>Add music to set the mood</li>
        </ul>
    </div>
</div>