@model Blazy.Core.DTOs.PostDto

@{
    ViewData["Title"] = Model.Title;
    var comments = ViewBag.Comments as IEnumerable<Blazy.Core.DTOs.CommentDto> ?? Enumerable.Empty<CommentDto>();
    int? currentUserId = User.Identity?.IsAuthenticated == true ? 
        int.TryParse(User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value, out int uid) ? uid : (int?)null : 
        null;
}

<div class="post-detail">
    <div class="post-header">
        <h1>@Model.Title</h1>
        <span class="post-meta">
            by <a asp-controller="Blog" asp-action="Index" asp-route-username="@Model.Username">@Model.Username</a>
            ‚Ä¢ @Model.CreatedAt.ToString("MMMM dd, yyyy @ HH:mm")
        </span>
    </div>
    
    @if (!string.IsNullOrEmpty(Model.ImageUrl))
    {
        <div class="post-image">
            <img src="@Model.ImageUrl" alt="Post image" />
        </div>
    }
    
    <div class="post-content">
        @Html.Raw(Model.Content)
    </div>

    @if (!string.IsNullOrEmpty(Model.MusicUrl))
    {
        <div class="post-music">
            <audio controls src="@Model.MusicUrl">Your browser does not support the audio element.</audio>
        </div>
    }

    @if (Model.Tags.Any())
    {
        <div class="post-tags">
            @foreach (var tag in Model.Tags)
            {
                <span class="tag">#@tag</span>
            }
        </div>
    }

    <div class="post-actions">
        @if (User.Identity?.IsAuthenticated == true)
        {
            if (Model.IsLiked)
            {
                <form asp-action="Unlike" method="post" class="inline-form">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" value="@Model.Id" />
                    <button type="submit" class="btn">‚ô• Liked</button>
                </form>
            }
            else
            {
                <form asp-action="Like" method="post" class="inline-form">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" value="@Model.Id" />
                    <button type="submit" class="btn">‚ô° Like</button>
                </form>
            }

            if (Model.IsDisliked)
            {
                <form asp-action="Undislike" method="post" class="inline-form">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" value="@Model.Id" />
                    <button type="submit" class="btn">‚úñ Disliked</button>
                </form>
            }
            else
            {
                <form asp-action="Dislike" method="post" class="inline-form">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" value="@Model.Id" />
                    <button type="submit" class="btn">‚úñ Dislike</button>
                </form>
            }
        }
        
        <span class="stats">
            ‚ô• @Model.LikeCount Likes ‚Ä¢ ‚úñ @Model.DislikeCount Dislikes ‚Ä¢ üí¨ @Model.CommentCount Comments
        </span>

        @if (User.Identity?.IsAuthenticated == true)
        {
            var userIdClaim = User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;
            var isAdmin = User.IsInRole("Admin");
            if (int.TryParse(userIdClaim, out int postUserId) && (postUserId == Model.UserId || isAdmin))
            {
                <form asp-action="Delete" method="post" class="inline-form ms-2">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" value="@Model.Id" />
                    <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this post? This action cannot be undone.')">Delete Post</button>
                </form>
            }
        }

        <a asp-controller="Blog" asp-action="Index" asp-route-username="@Model.Username" class="btn">‚Üê Back to @Model.Username's Blog</a>
        
        @if (User.Identity?.IsAuthenticated == true && Model.UserId != currentUserId)
        {
            <a asp-controller="Report" asp-action="CreatePostReport" asp-route-postId="@Model.Id" class="btn btn-warning">‚ö† Report Post</a>
        }
        
        @if (User.Identity?.IsAuthenticated == true && Model.UserId == currentUserId)
        {
            <form asp-action="Delete" method="post" class="inline-form">
                @Html.AntiForgeryToken()
                <input type="hidden" name="id" value="@Model.Id" />
                <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this post? This action cannot be undone.')">Delete Post</button>
            </form>
        }
    </div>
</div>

<div class="comments-section">
    <h3>Comments ‚úß</h3>
    
    @if (User.Identity?.IsAuthenticated == true)
    {
        <form asp-action="Comment" method="post" class="comment-form">
            @Html.AntiForgeryToken()
            <input type="hidden" name="id" value="@Model.Id" />
            <div class="form-group">
                <label for="Content">Add a comment:</label>
                <textarea id="Content" name="Content" rows="3" required placeholder="Write something nice... ‚ô°"></textarea>
            </div>
            <button type="submit" class="btn">Post Comment</button>
        </form>
    }
    else
    {
        <p><a asp-controller="Account" asp-action="Login">Login</a> to leave a comment!</p>
    }

    <div class="comments-list">
        @if (comments.Any())
        {
            @foreach (var comment in comments)
            {
                <div class="comment">
                    <div class="comment-header">
                        <strong><a asp-controller="Blog" asp-action="Index" asp-route-username="@comment.Username">@comment.Username</a></strong>
                        <span class="comment-date">@comment.CreatedAt.ToString("MMM dd, yyyy @ HH:mm")</span>
                    </div>
                    <div class="comment-content">
                        @Html.Raw(comment.Content)
                    </div>
                    
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <div class="comment-actions">
                            @if (comment.UserId == currentUserId)
                            {
                                <form asp-action="DeleteComment" method="post" class="inline-form">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@comment.Id" />
                                    <input type="hidden" name="postId" value="@Model.Id" />
                                    <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this comment?')">Delete</button>
                                </form>
                            }
                            
                            @if (comment.UserId != currentUserId)
                            {
                                <a asp-controller="Report" asp-action="CreateCommentReport" asp-route-commentId="@comment.Id" asp-route-postId="@Model.Id" class="btn btn-sm btn-warning">‚ö† Report</a>
                            }
                        </div>
                    }
                </div>
            }
        }
        else
        {
            <p class="no-comments">No comments yet. Be the first to comment! ‚ô°</p>
        }
    </div>
</div>