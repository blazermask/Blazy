@model (IEnumerable<Blazy.Core.DTOs.PostDto> Posts, int TotalCount)
@{
    ViewData["Title"] = "Manage Posts";
}

<div class="container mt-4">
    <h1 class="mb-4">Manage Posts</h1>
    
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    
    <!-- Posts Table -->
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Title</th>
                            <th>Author</th>
                            <th>Created</th>
                            <th>Status</th>
                            <th>Likes</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var post in Model.Posts)
                        {
                            <tr>
                                <td>@post.Id</td>
                                <td>
                                    <a asp-controller="Post" asp-action="Index" asp-route-id="@post.Id">
                                        @post.Title
                                    </a>
                                </td>
                                <td>@post.Username</td>
                                <td>@post.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                                <td>
                                    @if (post.IsDeleted)
                                    {
                                        <span class="badge bg-danger">Deleted</span>
                                        @if (post.DeletionNumber.HasValue)
                                        {
                                            <span class="badge bg-info">#@post.DeletionNumber</span>
                                        }
                                    }
                                    else
                                    {
                                        <span class="badge bg-success">Active</span>
                                    }
                                </td>
                                <td>@post.LikeCount</td>
                                <td>
                                    <a asp-controller="Post" asp-action="Index" asp-route-id="@post.Id" class="btn btn-sm btn-info me-2">View</a>
                                    @if (!post.IsDeleted)
                                    {
                                        <a asp-action="DeletePost" asp-route-id="@post.Id" class="btn btn-sm btn-danger">Delete</a>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            
            <!-- Pagination -->
            @if (Model.TotalCount > 20)
            {
                <nav aria-label="Page navigation" class="mt-3">
                    <ul class="pagination justify-content-center">
                        @for (int i = 1; i <= (int)Math.Ceiling((double)Model.TotalCount / 20); i++)
                        {
                            <li class="page-item @(ViewBag.CurrentPage == i ? "active" : "")">
                                <a class="page-link" asp-action="Posts" asp-route-page="@i">@i</a>
                            </li>
                        }
                    </ul>
                </nav>
            }
        </div>
    </div>
</div>