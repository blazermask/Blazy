@model (IEnumerable<Blazy.Core.DTOs.UserDto> Users, int TotalCount)
@{
    ViewData["Title"] = "Manage Users";
    var isOriginalAdmin = ViewBag.IsOriginalAdmin as bool? ?? false;
}

<div class="container mt-4">
    <h1 class="mb-4">ðŸ‘¥ Manage Users</h1>
    
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    
    <!-- Search Form -->
    <div class="card mb-4">
        <div class="card-body">
            <form asp-action="Users" method="get" class="d-flex gap-2">
                <input type="text" name="search" class="form-control" placeholder="Search users..." value="@Context.Request.Query["search"]">
                <button type="submit" class="btn btn-primary">Search</button>
                <a asp-action="Users" class="btn btn-secondary">Reset</a>
            </form>
        </div>
    </div>
    
    <!-- Users Table -->
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Username</th>
                            <th>Role</th>
                            <th>Status</th>
                            <th>Ban Info</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model.Users)
                        {
                            var isOriginalAdminUser = user.Username?.ToLower() == "admin";
                            <tr>
                                <td>@user.Id</td>
                                <td>
                                    <strong>@user.Username</strong>
                                    @if (isOriginalAdminUser)
                                    {
                                        <span class="badge bg-warning text-dark ms-1">Owner</span>
                                    }
                                </td>
                                <td>
                                    @if (user.IsAdmin)
                                    {
                                        <span class="badge bg-primary">Admin</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">User</span>
                                    }
                                </td>
                                <td>
                                    @if (user.IsBanned)
                                    {
                                        <span class="badge bg-@(user.IsPermanentlyBanned ? "danger" : "warning")">
                                            @(user.IsPermanentlyBanned ? "Permanently Banned" : "Temporarily Banned")
                                        </span>
                                    }
                                    else if (user.IsDeleted)
                                    {
                                        <span class="badge bg-dark">Deleted</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success">Active</span>
                                    }
                                </td>
                                <td>
                                    @if (user.IsBanned)
                                    {
                                        <div>
                                            <strong>Reason:</strong> @user.BanReason<br>
                                            @if (!user.IsPermanentlyBanned && user.BanUntilDate.HasValue)
                                            {
                                                <strong>Until:</strong> @user.BanUntilDate.Value.ToString("yyyy-MM-dd HH:mm")<br>
                                            }
                                            @if (!string.IsNullOrEmpty(user.BannedByAdminUsername))
                                            {
                                                <strong>Banned by:</strong> @user.BannedByAdminUsername
                                            }
                                        </div>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group-vertical" role="group">
                                        <a asp-controller="Blog" asp-action="Index" asp-route-username="@user.Username" class="btn btn-sm btn-info mb-1">View Profile</a>
                                        
                                        @if (!user.IsDeleted && !isOriginalAdminUser)
                                        {
                                            @if (user.IsBanned)
                                            {
                                                <form asp-action="UnbanUser" method="post" class="d-inline mb-1">
                                                    <input type="hidden" name="id" value="@user.Id">
                                                    <button type="submit" class="btn btn-sm btn-success w-100" onclick="return confirm('Are you sure you want to unban this user?')">Unban</button>
                                                </form>
                                            }
                                            else
                                            {
                                                <a asp-action="BanUser" asp-route-id="@user.Id" class="btn btn-sm btn-warning mb-1">Ban User</a>
                                            }

                                            @* Only the original admin can assign admin roles *@
                                            @if (isOriginalAdmin && !user.IsAdmin)
                                            {
                                                <form asp-action="AssignAdminRole" method="post" class="d-inline mb-1" 
                                                      onsubmit="return confirm('Are you sure you want to make @user.Username an administrator? They will be able to delete posts and accounts.');">
                                                    <input type="hidden" name="userId" value="@user.Id">
                                                    <button type="submit" class="btn btn-sm btn-primary w-100">Make Admin</button>
                                                </form>
                                            }

                                            <a asp-action="DeleteUserAccount" asp-route-id="@user.Id" class="btn btn-sm btn-danger">Delete Account</a>
                                        }
                                        else if (isOriginalAdminUser)
                                        {
                                            <button class="btn btn-sm btn-secondary" disabled title="Cannot modify the owner account">Protected</button>
                                        }
                                        else if (user.IsDeleted)
                                        {
                                            <span class="text-muted">Account Deleted</span>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            
            <!-- Pagination -->
            @if (Model.TotalCount > 20)
            {
                <nav aria-label="Page navigation" class="mt-3">
                    <ul class="pagination justify-content-center">
                        @for (int i = 1; i <= (int)Math.Ceiling((double)Model.TotalCount / 20); i++)
                        {
                            <li class="page-item @(ViewBag.CurrentPage == i ? "active" : "")">
                                <a class="page-link" asp-action="Users" asp-route-page="@i" asp-route-search="@Context.Request.Query["search"]">@i</a>
                            </li>
                        }
                    </ul>
                </nav>
            }
        </div>
    </div>
</div>