@model Blazy.Core.DTOs.AdminResetPasswordDto
@{
    ViewData["Title"] = "Reset User Password";
    var targetUser = ViewBag.TargetUser as Blazy.Core.DTOs.UserDto;
}

<div class="container mt-4">
    <h1 class="mb-4">Reset Password for @(targetUser?.Username ?? "User")</h1>

    <nav aria-label="breadcrumb" class="mb-3">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Admin Dashboard</a></li>
            <li class="breadcrumb-item"><a asp-action="Users">Users</a></li>
            <li class="breadcrumb-item active">Reset Password</li>
        </ol>
    </nav>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div asp-validation-summary="ModelOnly" class="alert alert-danger" style="display:@(ViewData.ModelState.ErrorCount > 0 ? "block" : "none")"></div>

    @if (targetUser != null)
    {
        <div class="card mb-4">
            <div class="card-body">
                <h5 class="card-title">User Information</h5>
                <dl class="row">
                    <dt class="col-sm-3">Username</dt>
                    <dd class="col-sm-9">@targetUser.Username</dd>

                    <dt class="col-sm-3">Email</dt>
                    <dd class="col-sm-9">@targetUser.Email</dd>

                    <dt class="col-sm-3">Role</dt>
                    <dd class="col-sm-9">
                        @if (targetUser.IsAdmin)
                        {
                            <span class="badge bg-danger">Admin</span>
                        }
                        else
                        {
                            <span class="badge bg-primary">User</span>
                        }
                    </dd>
                </dl>
            </div>
        </div>
    }

    <div class="card border-warning" style="max-width: 500px;">
        <div class="card-header bg-warning text-dark">
            <h5 class="card-title mb-0">⚠️ Reset User Password</h5>
        </div>
        <div class="card-body">
            <div class="alert alert-info">
                <strong>Note:</strong> This will reset the user's password without requiring their current password.
            </div>

            <form asp-action="ResetUserPassword" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="UserId" value="@Model.UserId" />

                <div class="mb-3">
                    <label for="NewPassword" class="form-label">New Password</label>
                    <input type="password" class="form-control" id="NewPassword" name="NewPassword" required placeholder="Enter new password (min 8 characters)">
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                    <div class="form-text">Password must be at least 8 characters long and contain at least one digit and one lowercase letter.</div>
                </div>

                <div class="mb-3">
                    <label for="ConfirmNewPassword" class="form-label">Confirm New Password</label>
                    <input type="password" class="form-control" id="ConfirmNewPassword" name="ConfirmNewPassword" required placeholder="Confirm new password">
                    <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-warning">Reset Password</button>
                <a asp-action="Users" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>